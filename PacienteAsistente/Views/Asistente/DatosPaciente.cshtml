@model PacienteAsistente.Model.Models.PacienteViewModel
@{
    ViewBag.Title = "DatosPaciente";
    Layout = "../Shared/_MyLayout.cshtml";
}

<div>
    <h1>Perfil Paciente</h1>

    <div class="row">
        <div class="form-group">
            <h2 style="display: inline-block;"> Nombre completo: </h2>
            <div style="display: inline-block">
                @Model.NombreUsuario
            </div>
        </div>
        <div class="form-group">
            <h2 style="display: inline-block;">Género: </h2>
            <div style="display: inline-block">
                @Model.Genero
            </div>
        </div>
        <div class="form-group">
            <h2 style="display: inline-block;"> Edad: </h2>
            <div style="display: inline-block">
                @Model.Edad
            </div>
        </div>
        <div class="form-group">
            <h2 style="display: inline-block;">Tipo de sangre: </h2>
            <div style="display: inline-block">
                @Model.TipoSangre
            </div>
        </div>
        <div class="form-group">
            <h2 style="display: inline-block;">Padecimiento: </h2>
            <div style="display: inline-block">
                @Model.Padecimiento
            </div>
        </div>
        <div class="form-group">
            <h2 style="display: inline-block;">Alergias: </h2>
            <div style="display: inline-block">
                @Model.Alergias
            </div>
        </div>
        <div class="form-group">
            <h2 style="display: inline-block;">Número de Emergencia: </h2>
            <div style="display: inline-block">
                @Model.NumEmergencia
            </div>
        </div>
    </div>


</div>

