<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Asistente Medico</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            background-position: center center;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
        header {
            background: #0a032f;
            position: absolute;
            width: 100%;
            top: 0;
        }

        footer {
            position: absolute;
            bottom: 0;
            color: rgb(55, 191, 180);
            margin-bottom: 0px;
            z-index: 1
        }
        li {
            padding-right: 20px
        }
    </style>
    <link href="~/Content/styles.css" rel="stylesheet" />
</head>
<body style="background-image: url('https://wallpaperaccess.com/full/136940.jpg')">
<header>
        <nav class="">
            <ul class="navbar-nav" style="list-style-type: none">
                <li>
                    <a href="@Url.Action("Index", "Paciente")">
                        <h4>Inicio</h4>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Perfil", "Paciente")">
                        <h4>Perfil Paciente</h4>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ListaAplicacion", "Paciente")">
                        <h4>Lista de Aplicación</h4>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("ListaAsistentes", "Paciente")">
                        <h4>Lista de Asistentes</h4>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("HistorialAplicacion", "Paciente")">
                        <h4>Historial de Aplicación</h4>
                    </a>
                </li>
            </ul>
        </nav>
</header>
<div class="container body-content">
    @RenderBody()
    <footer>
        <p>&copy; @DateTime.Now.Year - "Proyecto Titulación" 5NV82 Hernandez Zapiain Brenda Itzel</p>
    </footer>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@RenderSection("scripts", required: false)
</body>
</html>