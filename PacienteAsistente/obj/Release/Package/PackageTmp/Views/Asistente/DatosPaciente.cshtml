@model PacienteAsistente.Model.Models.PacienteViewModel
@{
    ViewBag.Title = "DatosPaciente";
    Layout = "../Shared/_Asistente.cshtml";
}
<style>
    .card-contenedor {
        text-align: center;
        background-color: rgba(193,255,255,.4);
        border-radius: 45px;
        color: black;
    }

    .form-group {
        margin-bottom: 1px
    }
</style>

<div class="card-contenedor">
    <div class="row">
        <div class="form-group">
            <h3 style="display: inline-block;"> Nombre completo:<b> @Model.NombreUsuario</b> </h3>
        </div>
        <div class="form-group">
            <h3 style="display: inline-block;">Género: <b>@Model.Genero</b> </h3>
        </div>
        <div class="form-group">
            <h3 style="display: inline-block;"> Edad: <b>@Model.Edad</b></h3>
        </div>
        <div class="form-group">
            <h3 style="display: inline-block;">Tipo de sangre: <b>@Model.TipoSangre</b></h3>
        </div>
        <div class="form-group">
            <h3 style="display: inline-block;">Padecimiento: <b>@Model.Padecimiento</b></h3>
        </div>
        <div class="form-group">
            <h3 style="display: inline-block;">Alergias: <b>@Model.Alergias</b></h3>
        </div>
        <div class="form-group">
            <h3 style="display: inline-block;">Número de Emergencia: <b>@Model.NumEmergencia</b></h3>
        </div>
    </div>


</div>

