@model PacienteAsistente.Model.Models.AsistenteViewModel
@{
    ViewBag.Title = "Perfil";
    Layout = "../Shared/_MyLayout.cshtml";
}

<div>
    <h1>Perfil</h1>
    @using (Html.BeginForm("Perfil", "Asistente", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger", style = "color: red" })
        <div class="row">
            <div class="form-group">
                <h2 style="display: inline-block;">Parentesco: </h2>
                <div style="display: inline-block">
                    @Html.DropDownListFor(x => x.Parentesco, new List<SelectListItem>
                    {
                        new SelectListItem {Text = "Enfermero(@)", Value = "Enfermera"},
                        new SelectListItem {Text = "Familiar", Value = "Familiar"}
                    }, "Seleccionar", new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;"> Nombre completo: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control", id = "name", type = "text", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;">Teléfono: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control", type = "tel", id = "tel", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <button type="submit">Actualizar Campos</button>
            </div>
        </div>
    }

</div>

