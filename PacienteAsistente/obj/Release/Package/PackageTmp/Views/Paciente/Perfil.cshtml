@model PacienteAsistente.Model.Models.PacienteViewModel
@{
    ViewBag.Title = "Perfil";
    Layout = "../Shared/_MyLayout.cshtml";
}

<div>
    <h1>Perfil</h1>
    @using (Html.BeginForm("Perfil", "Paciente", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary("", new { @class = "text-danger", style = "color: red" })
        <div class="row">
            <div class="form-group">
                <h2 style="display: inline-block;"> Nombre completo: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.NombreUsuario, new { @class = "form-control", id = "name", type = "text", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;">Género: </h2>
                <div style="display: inline-block">
                    @Html.DropDownListFor(x => x.Genero, new List<SelectListItem>
                    {
                        new SelectListItem {Text = "M", Value = "Mujer"},
                        new SelectListItem {Text = "H", Value = "Hombre"}
                    }, "Seleccionar", new { @class = "form-control", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;"> Edad: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.Edad, new { @class = "form-control", id = "name", type = "text", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;">Tipo de sangre: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.TipoSangre, new { @class = "form-control", type = "text", id = "tel", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;">Padecimiento: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.Padecimiento, new { @class = "form-control", type = "text", id = "tel", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;">Alergias: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.Alergias, new { @class = "form-control", type = "text", id = "tel", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <h2 style="display: inline-block;">Número de Emergencia: </h2>
                <div style="display: inline-block">
                    @Html.TextBoxFor(m => m.NumEmergencia, new { @class = "form-control", type = "text", id = "tel", required = "required" })
                </div>
            </div>
            <div class="form-group">
                <button type="submit">Actualizar Campos</button>
            </div>
        </div>
    }

</div>


